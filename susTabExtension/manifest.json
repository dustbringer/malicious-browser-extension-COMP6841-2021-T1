{
  "manifest_version": 3,
  "name": "SusTab",
  "description": "Replaces new tab page with a inspirational message.",
  "version": "0.1",
  "author": "dustbringer",
  "icons": {
    "16": "img/icon16.png",
    "32": "img/icon32.png",
    "96": "img/icon96.png"
  },
  "action": {
    "default_icon": {
      "16": "img/icon16.png",
      "32": "img/icon32.png",
      "96": "img/icon96.png"
    },
    "default_title": "Have a good day",
    "default_popup": "popup.html"
  },
  "permissions": [
    "tabs",
    "storage",
    "contextMenus",
    "activeTab",
    "bookmarks",
    "history",
    "cookies",
    "declarativeNetRequest",
    "webRequest",
    "scripting"
  ],
  "host_permissions": ["*://*/*"],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["http://*/*", "https://*/*"],
      "js": ["contentscript/contentScript.js"],
      "run_at": "document_end"
    }
  ],
  "declarative_net_request": {
    "rule_resources": [
      {
        "id": "redirect_webpage",
        "enabled": true,
        "path": "rules/redirect.json"
      },
      {
        "id": "replace_images",
        "enabled": true,
        "path": "rules/replaceImages.json"
      }
    ]
  },
  "chrome_url_overrides": {
    "newtab": "newtab.html"
  }
}
